<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="리포트 사유 내용"
            android:textColor="#673AB7"
            android:textSize="32dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:gravity="center"
            android:hint="250자 내로 작성해주세요"
            android:inputType="text"
            android:maxLength="250"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />

        <Button
            android:id="@+id/back_to_loginpage_setting"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@+id/et_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/selector_write"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold" />


        <ImageView
            android:layout_below="@+id/back_to_loginpage_setting"
            android:layout_alignParentEnd="true"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/thema_login2"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>